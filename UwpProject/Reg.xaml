<Page
    x:Class="UwpProject.Reg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="usernameReg" HorizontalAlignment="Left" Margin="119,154,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="passwordReg" HorizontalAlignment="Left" Margin="119,217,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="roleReg" HorizontalAlignment="Left" Margin="119,254,0,0" TextWrapping="Wrap" Text="Job Role" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="emailReg" HorizontalAlignment="Left" Margin="119,314,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="156"/>
        <Button x:Name="submitReg" Content="Submit" HorizontalAlignment="Left" Margin="125,417,0,0" VerticalAlignment="Top" Height="35" Width="150" Click="submitReg_Click"/>
        <TextBox x:Name="errorMessage" HorizontalAlignment="Left" Margin="125,351,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>

    </Grid>
</Page>

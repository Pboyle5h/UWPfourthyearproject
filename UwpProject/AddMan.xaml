<Page
    x:Class="UwpProject.AddMan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="submitReg" Content="Submit" HorizontalAlignment="Left" Margin="119,265,0,0" VerticalAlignment="Top" Height="35" Width="150" Click="submitReg_Click"/>
        <TextBlock x:Name="errorMessage" HorizontalAlignment="Left" Margin="119,305,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <TextBox x:Name="usernameReg" HorizontalAlignment="Left" Margin="119,154,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="emailReg" HorizontalAlignment="Left" Margin="119,228,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="156"/>
        <PasswordBox x:Name="passwordReg" HorizontalAlignment="Left" Margin="119,191,0,0" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="username" Text="Username:" HorizontalAlignment="Left" Margin="44,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="password" Text="Password:" HorizontalAlignment="Left" Margin="54,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
